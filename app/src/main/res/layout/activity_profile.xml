<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/image"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/soleloner" />

    <EditText
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:hint="Name, Surname"
        android:inputType="text" />

    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:hint="Youremail address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:hint="Phone Number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:text="You can edit your profile anytime you wish."
        android:textColor="#000" />

    <TextView
        android:id="@+id/here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="I am here for:"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/here"
        android:layout_marginLeft="18dp"
        android:text="Fitness" />

    <CheckBox
        android:id="@+id/well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/here"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/fit"
        android:text="Wellness" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/here"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/well"
        android:text="Music" />

    <TextView
        android:id="@+id/iam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fit"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Gender"
        android:textColor="#000" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iam"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Female" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/prefer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Prefer not to say" />

    </RadioGroup>

    <Button
        android:id="@+id/btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Go to Homepage"
        android:layout_below="@+id/radio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#000"
        android:textColor="#fff"/>

</RelativeLayout>